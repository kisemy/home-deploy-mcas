<div id="item_form_popup" class="modal editableModal editTaxModal edititemModal">
  <%- model_class = item -%>
      <div class="modal-content modal-balance">
          <div class="modal-header clearfix text-content">
            <div class="modal-action-btn right">
              <a href="javascript:void(0);" onclick="$('.submit-item-form').click();" title="<%= t('views.common.save') %>" class="modal-action waves-effect">
                <i class="material-icons" >done</i>
              </a>
              <a href="javascript:void(0);" title="<%= t('views.common.cancel') %>" class="modal-action modal-close waves-effect">
                <i class="material-icons close">close</i>
              </a>
            </div>
            
          </div>
          <%= simple_form_for glentry, remote: true, html: { class: "item_form #{glentry.persisted? ? 'edit_item' : ''}" } do |f| %>
            <div class="modal-body modal-body-balance">
              <div class="row">
             
        <span class="hidden glentry_id"><%= glentry.id %></span>
                <%= f.submit class: 'btn_large submit-item-form hidden' %>
               
               <%= f.input :description, label: t('views.glentries.description'), wrapper_html: { class: 'input-field col s12' }, label_html: { id: 'step1', class: 'intro glentries-new-false-intro' } %>
                <%= f.input :description, label: t('views.glentries.description'), wrapper_html: { class: 'input-field col s12' }, label_html: { id: 'step2', class: 'intro glentries-new-false-intro' } %>


             
                <%= hidden_field_tag :position, params[:position] %>
              </div>
              <div class="row">
                <div class="col s12 items">
                  <h5 id="step5" class="text-blue title-heading intro glentries-new-false-intro"><%= t('views.glentries.make_this_glentry_available_to') %></h5>
                  <div class="input-field col s12">
                    <%= associate_account(controller_name, action_name, @glentry) %>
                  </div>
                </div>
              </div>
              </div>
            </div>
          </div>
    <% end %>
</div>
