<div class="change_password_form">
  <!--content_top-->
  <section id="login-section" class="sign-up">
    <div class="container">
      <div class="login-container z-depth-1">
        <span class="side-nav"></span>
        <a class="logo" href="#">Open<span>Source</span>Billing</a>
        <h2>Change Your Password</h2>
        <div class="notice"><%= devise_error_messages! %></div>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put, id: 'change_password_form', :novalidate => ""}) do |f| %>
          <%#= devise_error_messages! %>
          <%#= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class='input-field'>
            <%= f.password_field :current_password, required: '' %>
            <label for='user_current_password'>Current password</label>
          </div>
          <div class='input-field'>
            <%= f.password_field :password %>
            <label for='user_password'>New Password</label>
          </div>
          <div class='input-field'>
            <%= f.password_field :password_confirmation %>
            <label for='user_password_confirmation'>Confirmation</label>
          </div>
          <div class="btn-content">
            <%= f.submit "Change password", :class => "btn_large submit col s4 btn waves-effect change_password_btn" %>
          </div>
        <% end %>
        <a  href="<%= dashboard_path %>" class="btn-login-add btn-floating btn-large waves-effect forgot "><i class="material-icons close">close</i></a>
      </div>
    </div>
  </section>

</div><!--change_password_form-->
