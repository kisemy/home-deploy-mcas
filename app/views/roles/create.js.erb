<% if @role.errors.present? %>
swal({
    icon: "error",
    title: "oops..!",
    buttons: false,
    timer: 3000,
    text: "<%= @role.errors.full_messages.join('.') %>",
    html: true
});
<% else %>
$('.modal').modal('close')
swal({
    icon: "success",
    title: "Success",
    buttons: false,
    timer: 3000,
    text: "Role created successfully"}).then(function(){
    window.location = '<%= roles_path %>'

});
<% end %>