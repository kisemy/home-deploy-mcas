<% if @glentry_updated.eql?(true) %>
  $('.modal').modal('close');
  swal({
      icon: "success",
      title: 'Success',
      buttons: false,
      timer: 3000,
      text: "<%= t('views.glentries.glentry_updated') %>"}).then(function(){
      window.location = '<%= glentry_path(@glentry) %>'
  });
<% else %>
  swal({
      icon: "error",
      title: 'Oops..!',
      buttons: false,
      timer: 3000,
      text: "<%= @glentry.errors.full_messages.join('.') %>"
  });
<% end %>
